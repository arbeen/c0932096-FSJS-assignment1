//- edit-user.pug: Form to edit user data
//- rendered from the route "/edit"
extends layout

block content
  h3 Edit User
  .w3-container.w3-card-4.w3-padding-32.w3-margin-top
    form(action=`/edit/${user._id}`, method="POST")
      
      .w3-row-padding
        .w3-col.s12.m6
          label(for="firstName") First Name
          input.w3-input.w3-border(type="text", name="firstName", id="firstName", value=user.firstName, placeholder="First Name", required)
        
        .w3-col.s12.m6
          label(for="lastName") Last Name
          input.w3-input.w3-border(type="text", name="lastName", id="lastName", value=user.lastName, placeholder="Last Name", required)

      .w3-row-padding
        .w3-col.s12.m6
          label(for="dateOfBirth") Date of Birth
          input.w3-input.w3-border(type="date", name="dateOfBirth", id="dateOfBirth", value=user.dateOfBirth.toISOString().split('T')[0], required)
        
        .w3-col.s12.m6
          label(for="address1") Address Line 1
          input.w3-input.w3-border(type="text", name="address1", id="address1", value=user.address1, placeholder="Address Line 1", required)

      .w3-row-padding
        .w3-col.s12.m6
          label(for="address2") Address Line 2
          input.w3-input.w3-border(type="text", name="address2", id="address2", value=user.address2, placeholder="Address Line 2")
        
        .w3-col.s12.m6
          label(for="city") City
          input.w3-input.w3-border(type="text", name="city", id="city", value=user.city, placeholder="City", required)

      .w3-row-padding
        .w3-col.s12.m6
          label(for="postalCode") Postal Code
          input.w3-input.w3-border(type="text", name="postalCode", id="postalCode", value=user.postalCode, placeholder="Postal Code", required)
        
        .w3-col.s12.m6
          label(for="country") Country
          input.w3-input.w3-border(type="text", name="country", id="country", value=user.country, placeholder="Country", required)

      .w3-row-padding
        .w3-col.s12.m6
          label(for="phoneNumber") Phone Number
          input.w3-input.w3-border(type="text", name="phoneNumber", id="phoneNumber", value=user.phoneNumber, placeholder="Phone Number", required)
        
        .w3-col.s12.m6
          label(for="email") Email
          input.w3-input.w3-border(type="email", name="email", id="email", value=user.email, placeholder="Email", required)

      .w3-row-padding
        .w3-col.s12
          label(for="notes") Notes
          textarea.w3-input.w3-border(name="notes", id="notes", placeholder="Notes" rows="5")= user.notes

      button.w3-button.w3-blue.w3-margin-top.w3-block(type="submit") Update

    form(action=`/delete/${user._id}`, method="POST", style="margin-top: 20px")
      button.w3-button.w3-red.w3-block(type="submit") Delete
